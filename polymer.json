{
  "entrypoint": "index.html",
  "shell": "src/cards-manager.html",
  "fragments": [
    "src/views/cards-list-view.html",
    "src/views/create-card-view.html",
    "src/views/error-view.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
